<div class="chat-card {{#if activeCard}}active{{/if}}">
    {{> Avatar }}
    <div class="chat-card__info">
        <div class="chat-card__info-title">
            {{nickName}}
        </div>
        <div class="chat-card__info-message">
            {{#if yourMessage}}
                <span>You:</span>
            {{/if}}
            {{message}}
        </div>
    </div>
    <div class="chat-card__counters">
        <div>
            10:30
        </div>
        {{#if lastMessageCount}}
            <div class="chat-card__counters__circle">
                {{lastMessageCount}}
            </div>
        {{/if}}
    </div>
</div>