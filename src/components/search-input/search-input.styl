@import '../../styles/helpers/variables.styl'
@import '../../styles/helpers/mixins.styl'

.search-input
  position relative
  width 100%
  height 48px

  &__field
    width 100%
    height 100%
    padding 10px 40px
    inter-regular(14px, 24px)
    font-size 16px
    line-height 1.5
    color $text-grayscale-primary
    border 1px solid $border-gray
    border-radius 4px
    background $dark-light
    transition all 0.2s ease

    &:hover
      border-color $border-gray-hover

    &:focus
      border-color $brand-default
      outline none

    &::placeholder
      color $text-grayscale
      opacity 1

  &__icon
    position: absolute
    top: 50%
    transform: translateY(-50%)
    width: 20px
    height: 20px
    padding: 4px
    background: none
    border: none
    cursor: pointer
    opacity: 0.7
    transition: opacity 0.2s ease

    &:hover
      opacity: 1

    &--left
      left: 12px
      pointer-events: none

    &--right
      right: 12px
      display: none

    &--visible
      display: block

  button&__icon
    padding: 0
    img
      padding: 0
  img
    padding: 0