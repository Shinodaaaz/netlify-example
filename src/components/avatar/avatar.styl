@import '../../styles/helpers/variables.styl'
@import '../../styles/helpers/mixins.styl'

.avatar
  display flex
  align-items center
  justify-content center
  position relative
  width 38px
  height 38px

  &--l
    width 130px
    height 130px

.avatar-image,
.avatar-default
  width 100%
  height 100%
  display flex
  flex-direction column
  align-items center
  justify-content center
  position relative
  border 1px solid $border-gray-primary
  color white
  border-radius 50%
  background $gray-secondary

  &.with-mask
    mask: radial-gradient(circle at 80% 80%, transparent 14%, black 14%)

.avatar-default
  background-image: none !important
  font-size 16px

.avatar-image
  background-size cover
  background-position center
  background-repeat no-repeat
  border none

.status-indicator
  position absolute
  bottom 4.5px
  right 4.5px
  width 7px
  height 7px
  border-radius 50%
  background $gray-offline
  z-index 1

  &--online
    background $green