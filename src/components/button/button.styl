@import '../../styles/helpers/variables.styl'
@import '../../styles/helpers/mixins.styl'

.button
  display inline-flex
  align-items center
  justify-content center
  text-decoration none
  white-space nowrap
  cursor pointer
  border-radius 4px
  transition all 0.2s ease
  archivo-semi-bold(16px, 24px)
  height 48px

  &__icon
    display flex
    align-items center

    &--left
      margin-right 8px

    &--right
      margin-left 8px

    img
      width 20px
      height 20px
      object-fit contain
      transition filter 0.2s ease

  &__label
    display inline

  &--full-width
    width 100%

  &--fixed
    width 200px

  &:not(.button--outline):not(.button--link)
    background $brand-default
    color $text-invert-default
    border 1px solid #FFFFFF3D
    box-shadow 0 3px 3px -1px #00000026

    &:hover
      background $brand-hover

    &:active
      background $brand-pressed

    &:disabled
      background $brand-disabled
      border 1px solid #FFFFFF24
      cursor not-allowed

  &--outline
    background transparent
    color $text-grayscale-primary
    border none
    box-shadow none

    &:hover
      background transparent
      color $text-grayscale-secondary

    &:active
      background rgba(0, 0, 0, 0.05)

    &:disabled
      color $text-disabled
      border 1px solid $text-disabled
      cursor not-allowed

  &--link
    background transparent
    color $text-grayscale-primary
    border none
    box-shadow none
    padding 0
    height auto

    &:hover,
    &:focus
      color $brand-default

      .button__icon img
        filter: brightness(0) saturate(100%) invert(34%) sepia(98%) saturate(2033%) hue-rotate(193deg) brightness(95%) contrast(101%)

    &:disabled
      color $text-disabled
      cursor not-allowed

.button--sm
  padding 6px 12px
  archivo-semi-bold(14px, 20px)

.button--md
  padding 10px 20px
  archivo-semi-bold(16px, 24px)

.button--lg
  padding 14px 28px
  archivo-semi-bold(18px, 28px)