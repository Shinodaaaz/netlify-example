@import 'helpers/variables.styl';

html, body
  width: 100%
  min-height: 100vh
  margin: 0
  padding: 0
  background: $dark
  color: #333

#app
  display: flex
  flex-direction: column
  position: relative
  width: 100%
  min-height: 100vh
  z-index: 2

.global-bg
  position: fixed
  top: 0
  left: 0
  width: 100%
  height: 100%
  z-index: 1
  pointer-events: none
  overflow: hidden

  img, svg
    width: 100%
    height: 100%
    object-fit: cover
    opacity: 0.2
    filter: blur(10px)
    transform: scale(1.05)