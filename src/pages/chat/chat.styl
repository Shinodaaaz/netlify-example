@import "../../styles/helpers/variables.styl"
@import "../../styles/helpers/mixins.styl"

.chat-layout
  display flex
  height 100vh

.chat-sidebar
  display flex
  flex-direction column
  position relative
  width 360px
  border-right 1px solid $border-gray-primary
  overflow hidden
  background $dark-light
  padding 21px 10px
  p
    archivo-semi-bold(15px, 28px)
    text-align center
    color $white-secondary


.chat-dialog
  flex 1
  display flex
  flex-direction column
  min-width 0
  &__empty
    display flex
    flex-direction column
    width 100%
    height 100%
    align-items center
    justify-content center
    archivo-semi-bold(20px, 28px)
    color $text-grayscale-primary

.add-friend-pop-up
  display flex
  flex-direction column
  width 100%
  margin-top 50px
  row-gap 20px
